<div class="k-d-flex-wrap" id="color-picker-container">
    <div class="box-col">
        <label for="flatcolorpicker">FlatColorPicker:</label>
        @(Html.Kendo().FlatColorPicker()
                .Name("flatcolorpicker")
                .Input(false)
                .Preview(false)
                .Views(new string[] { "gradient" })
                .Events(events => events
                    .Change("flatChange")
                )
        )
    </div>
    <div class="box-col">
        <label for="palette-picker">ColorPicker (palette):</label>
        @(Html.Kendo().ColorPicker()
                .Name("palette-picker")
                .Input(false)
                .Preview(false)
                .Views(new string[] {"gradient"})
                .Value("#cc2222")
                .Palette(ColorPickerPalette.Basic)
                .Events(events => events
                    .Select("pickerSelect")
                    .Change("pickerChange")
                    .Open("pickerOpen")
                    .Close("pickerClose")
                )
        )
    </div>
    <div class="box-col">
        <label for="hsv-picker">ColorPicker (HSV):</label>
        @(Html.Kendo().ColorPicker()
                .Name("hsv-picker")
                .Input(false)
                .Preview(false)
                .Views(new string[] {"gradient"})
                .Value("#22cc22")
                .Events(events => events
                    .Select("pickerSelect")
                    .Change("pickerChange")
                    .Open("pickerOpen")
                    .Close("pickerClose")
                )
        )
    </div>
    <div class="box-col">
        <label for="palette">ColorPalette:</label>
        @(Html.Kendo().ColorPalette()
                .Name("palette")
                .Events(events => events
                    .Change("paletteChange")
                )
        )
    </div>
</div>

@section scripts {
<script>

    function pickerSelect(e) {
        kendoConsole.log("Select in picker #" + this.element.attr("id") + " :: " + e.value);
    }

    function pickerChange(e) {
        kendoConsole.log("Change in picker #" + this.element.attr("id") + " :: " + e.value);
    }

    function pickerOpen(e) {
        kendoConsole.log("Open in picker #" + this.element.attr("id"));
    }

    function pickerClose(e) {
        kendoConsole.log("Close in picker #" + this.element.attr("id"));
    }

    function paletteChange(e) {
        kendoConsole.log("Change in color palette :: " + e.value);
    }

    function flatChange(e) {
        kendoConsole.log("Change in flat color picker :: " + e.value);
    }
</script>
}

<style>
    #color-picker-container {
        padding-top: 54px;
        padding-bottom: 30px;
    }

    .box-col {
        text-align: center;
        margin-top: 20px;
    }

        .box-col label {
            display: block;
	    }
</style>