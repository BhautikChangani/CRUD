<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    <div class="k-w-300">
        @(Html.Kendo().TextBox()
            .Name("textbox")
            .Label(l => l.Content("Set value"))
            .Events(e => e.Change("onChange"))
            .HtmlAttributes(new { style = "width: 100%" })
        )
    </div>
</div>

@section scripts {
<script>
    function onChange() {
        kendoConsole.log("Change :: " + this.value());
    };
</script>
}
