<div class='note' style="text-align: center;">
    <p>
        Resize the browser to see how the DatePicker popup adapts to different resolutions.
    </p>
</div>

<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    <div class="k-w-300">
        <label for="datepicker">Select date:</label>
        @(Html.Kendo().DatePicker()
            .Name("datepicker")
            .AdaptiveMode(AdaptiveMode.Auto)
            .ComponentType("modern")
            .HtmlAttributes(new { style = "width: 100%", title = "datepicker", accesskey = "w" })
            )
    </div>
</div>

<style>
    .note {
        font: normal 18px "Metric";
        border-radius: 2px;
        margin: 20px auto 40px auto;
        padding: 20px;
        border-left: 4px solid;
        border-left-color: #5392e4;
        background: rgba(83,146,228,0.1);
        text-align: center;
    }
</style>