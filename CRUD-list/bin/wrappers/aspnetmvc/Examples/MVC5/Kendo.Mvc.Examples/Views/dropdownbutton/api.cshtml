<div class="configurator">
    <div class="header">Configurator</div>
    <div class="box-col">
        <ul class="options">
            <li>
                <button id="enableButton" type="button">Enable</button>                   
            </li>
            <li>
                <button id="disableButton" type="button">Disable</button>
            </li>
        </ul>            
    </div>
    <div class="box-col">
        <ul class="options">
            <li>
                <button id="showButton" type="button">Show the <b>'Settings'</b> Option</button>                    
            </li>
            <li>
                <button id="hideButton" type="button">Hide the <b>'Settings'</b> Option</button>
            </li>
        </ul>
    </div>
    <div class="box-col">
        <ul class="options">
            <li>
                <button id="open" type="button">Open</button>
                <button id="close" type="button">Close</button>
            </li>
        </ul>
    </div>
</div>

<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    @(Html.Kendo().DropDownButton()
            .Name("dropDownButton")
            .Text("User Settings")
            .Items(items=>{
                items.Add().Id("profile").Text("My Profile");
                items.Add().Id("friend-request").Text("Friend Requests");
                items.Add().Id("settings").Text("Account Settings");
                items.Add().Id("support").Text("Support");
                items.Add().Id("logout").Text("Log Out");
            })
    )
</div>

<script>
    $(document).ready(function() {

        var dropDownButton = $("#dropDownButton").data("kendoDropDownButton");


        $("#enableButton").click(function(){
            dropDownButton.enable(true);
        });

        $("#disableButton").click(function(){
            dropDownButton.enable(false);
        });

        $("#showButton").click(function(){
            dropDownButton.show($("#settings"));
        });

        $("#hideButton").click(function(){
            dropDownButton.hide($("#settings"));
        });
        $("#open").click(function(){
            dropDownButton.open();
        });
        $("#close").click(function(){
            dropDownButton.close();
        });
    });
</script>