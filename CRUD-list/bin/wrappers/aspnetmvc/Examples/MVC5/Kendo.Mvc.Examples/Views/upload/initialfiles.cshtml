@model IEnumerable<Kendo.Mvc.Examples.Models.UploadInitialFile>

<div class="demo-section">
    @(Html.Kendo().Upload()
          .Name("files")
          .Async(a => a
              .Save("Initial_Files_Save_And_Persist", "Upload")
              .Remove("Initial_Files_Remove_And_Persist", "Upload")
              .AutoUpload(true)
          )
          .Files(files =>
          {
              foreach (var f in Model)
              {
                  files.Add().Name(f.Name).Extension(f.Extension).Size(f.Size);
              }
          })
     )
</div>