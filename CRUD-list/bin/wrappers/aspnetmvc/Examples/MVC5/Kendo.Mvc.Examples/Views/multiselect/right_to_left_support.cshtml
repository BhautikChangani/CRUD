<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    <div class="k-w-300 k-rtl">
        <label for="multiselect">Select Continents:</label>
        @(Html.Kendo().MultiSelect()
            .Name("multiselect")
            .DataTextField("Text")
            .DataValueField("Value")
            .BindTo(new List<SelectListItem>()
            {
                new SelectListItem() {
                    Text = "Africa", Value = "1"
                },
                new SelectListItem() {
                    Text = "Europe", Value = "2"
                },
                new SelectListItem() {
                    Text = "Asia", Value = "3"
                },
                new SelectListItem() {
                    Text = "North America", Value = "4"
                },
                new SelectListItem() {
                    Text = "South America", Value = "5"
                },
                new SelectListItem() {
                    Text = "Antarctica", Value = "6"
                },
                new SelectListItem() {
                    Text = "Australia", Value = "7"
                }
            })
        )
    </div>
</div>
