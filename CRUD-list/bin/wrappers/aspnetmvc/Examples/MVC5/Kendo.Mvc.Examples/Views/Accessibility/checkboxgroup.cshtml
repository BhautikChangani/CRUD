
            <div class="demo-section k-content">
            <div>
                <label for="checkBoxGroup" class="label">Select language:</label>
                <ul id="checkBoxGroup" aria-label="Select language"></ul>
            </div>
            </div>
          <script type="module">
            $(document).ready(function () {
                $("#checkBoxGroup").kendoCheckBoxGroup({
                    items: ["English", "German", "Italian", "Russian", "Spanish"],
                    layout: "vertical",
                    labelPosition: "before",
                    value: ["English"]
                });

                $(document.body).keydown(function (e) {
                    if (e.altKey && e.keyCode == 87) {
                        $("#checkBoxGroup").find(".k-checkbox:first").focus();
                    }
                });
            });
        </script>
        