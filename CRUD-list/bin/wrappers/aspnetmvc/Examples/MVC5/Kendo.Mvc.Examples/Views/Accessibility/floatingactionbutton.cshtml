
                <button id="fab" title="FloatingActionButton"></button>
            <script type="module">
                $(document).ready(function () {
                    $("#fab").kendoFloatingActionButton({
                        icon: "share",
                        positionMode: "absolute",
                        align: "top left",
                        alignOffset: {
                            x: 120,
                            y: 120
                        },
                        themeColor: "info",
                        size: "large",
                        shape: "pill",
                        items: [{
                            label: "Download",
                            icon: "download",
                            click: function () {
                                kendo.alert("download action");
                            }
                        }, {
                            label: "Print",
                            icon: "print",
                            click: function () {
                                kendo.alert("print action");
                            },
                        }, {
                            label: "Email",
                            icon: "envelop",
                            click: function () {
                                kendo.alert("email action");
                            }
                        }],
                    });
                });

                $(document).keydown(function (e) {
                    if (e.altKey && e.keyCode === 87) {
                        $("#fab").data("kendoFloatingActionButton").wrapper.focus();
                    }
                });
            </script>
        