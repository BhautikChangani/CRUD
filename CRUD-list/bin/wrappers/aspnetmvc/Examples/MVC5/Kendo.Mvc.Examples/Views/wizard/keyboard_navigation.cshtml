<div class="demo-section wide" style="width:700px">
    @(Html.Kendo().Wizard()
        .Name("wizard")
        .ContentPosition(WizardContentPosition.Right)
        .ValidateForms(false)
        .Stepper(stepper=>stepper.Linear(false))
        .Steps(steps =>
        {
            steps.Add()
                .Title("Welcome")
                .Content("<div style=\"text-align:center\"><h3>Complete the Registration Form to enroll in the course</h3></div>")
                .Buttons(b =>
                {
                    b.Next();
                });
            steps.Add<Kendo.Mvc.Examples.Models.Form.UserViewModel>()
                .Title("User Details")
                .Form(form =>
                {
                    form.FormData(Model);
                    form.Items(itm =>
                    {
                        itm.Add().Field(f => f.UserName);
                        itm.Add().Field(f => f.Email);
                        itm.Add().Field(f => f.Password);
                    });
                })
                .Buttons(b =>
                {
                    b.Previous();
                    b.Next();
                });
            steps.Add<Kendo.Mvc.Examples.Models.Form.UserViewModel>()
                .Title("Personal Details")
                .Form(form =>
                {
                    form.FormData(Model);
                    form.Items(itm =>
                    {
                        itm.Add().Field(f => f.FirstName);
                        itm.Add().Field(f => f.LastName);
                        itm.Add().Field(f => f.DateOfBirth);
                    });
                })
                .Buttons(b =>
                {
                    b.Previous();
                    b.Next();
                });
            steps.Add()
                .Title("Finish")
                .Content("<div style=\"text-align:center\"><h3>Registration Complete!</h3></div>")
                .Buttons(b =>
                {
                    b.Previous();
                    b.Done();
                });
        })
    )
</div>

@section scripts {
<script>
    $("#Password").attr("type", "password");

    $(document.body).keydown(function (e) {
    if (e.altKey && e.keyCode == 87) {
        $("#wizard .k-step-current .k-step-link").focus();
    }
    });
</script>
}
