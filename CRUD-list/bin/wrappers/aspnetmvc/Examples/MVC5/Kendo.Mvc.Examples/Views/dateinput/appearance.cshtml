<div class="configurator">
    <div class="header">Configurator</div>
    <div class="box-col">
        <ul class="options">
            <li>
                <h4>Size</h4>
                <input id="size" name="size" />
            </li>
        </ul>
    </div>
    <div class="box-col">
        <ul class="options">
            <li>
                <h4>Fill Mode</h4>
                <input id="fillMode" name="fillMode" />
            </li>
        </ul>
    </div>
    <div class="box-col">
        <ul class="options">
            <li>
                <h4>Border Radius</h4>
                <input id="rounded" name="rounded" />
            </li>
        </ul>
    </div>
</div>

<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    <div class="k-w-300">
        <label for="dateinput">Enter a date:</label>
        @(Html.Kendo().DateInput()
          .Name("dateinput")
          .Size(ComponentSize.Medium)
          .FillMode(FillMode.Solid)
          .Rounded(Rounded.Medium)
          .HtmlAttributes(new { style = "width: 100%" })
        )
    </div>
</div>

    @section scripts {
        <script>
            $(document).on("kendoReady", function () {

                $("#size").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    value: "medium",
                    change: onChange,
                    dataSource: [
                        { text: "Small", value: "small" },
                        { text: "Medium", value: "medium" },
                        { text: "Large", value: "large" },
                        { text: "None", value: "none" }
                    ]
                });

                $("#rounded").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    value: "medium",
                    change: onChange,
                    dataSource: [
                        { text: "Small", value: "small" },
                        { text: "Medium", value: "medium" },
                        { text: "Large", value: "large" },
                        { text: "Full", value: "full" },
                        { text: "None", value: "none" },
                    ]
                });

                $("#fillMode").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    value: "solid",
                    change: onChange,
                    dataSource: [
                        { text: "Solid", value: "solid" },
                        { text: "Flat", value: "flat" },
                        { text: "Outline", value: "outline" },
                        { text: "None", value: "none" }
                    ]
                });

                function onChange(e) {
                    var dateinput = $("#dateinput").data("kendoDateInput");
                    var size = $("#size").data("kendoDropDownList").value();
                    var rounded = $("#rounded").data("kendoDropDownList").value();
                    var fillMode = $("#fillMode").data("kendoDropDownList").value();

                    dateinput.setOptions({
                        size: size,
                        rounded: rounded,
                        fillMode: fillMode
                    });
                }
            });
        </script>
    }

<style>
    .k-picker.k-dropdownlist {
        width: 140px;
    }
</style>
