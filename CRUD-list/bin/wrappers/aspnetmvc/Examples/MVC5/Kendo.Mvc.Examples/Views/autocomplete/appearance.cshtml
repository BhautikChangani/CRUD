
<div class="configurator">
    <div class="header">Configurator</div>
    <div class="box-col">
        <ul class="options">
            <li>
                <h4>Size</h4>
                <input id="size" name="size" />
            </li>
        </ul>
    </div>
    <div class="box-col">
        <ul class="options">
            <li>
                <h4>Fill Mode</h4>
                <input id="fillMode" name="fillMode" />
            </li>
        </ul>
    </div>
    <div class="box-col">
        <ul class="options">
            <li>
                <h4>Border Radius</h4>
                <input id="rounded" name="rounded" />
            </li>
        </ul>
    </div>
</div>

<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    <div class="k-w-300">
        <label for="countries">Choose shipping countries:</label>

        @(Html.Kendo().AutoComplete()
          .Name("countries")
          .Size(ComponentSize.Medium)
          .Rounded(Rounded.Medium)
          .FillMode(FillMode.Solid)
          .Filter("startswith")
          .Placeholder("Select country...")
          .BindTo(new string[] {
                "Albania",
                "Andorra",
                "Armenia",
                "Austria",
                "Azerbaijan",
                "Belarus",
                "Belgium",
                "Bosnia & Herzegovina",
                "Bulgaria",
                "Croatia",
                "Cyprus",
                "Czech Republic",
                "Denmark",
                "Estonia",
                "Finland",
                "France",
                "Georgia",
                "Germany",
                "Greece",
                "Hungary",
                "Iceland",
                "Ireland",
                "Italy",
                "Kosovo",
                "Latvia",
                "Liechtenstein",
                "Lithuania",
                "Luxembourg",
                "Macedonia",
                "Malta",
                "Moldova",
                "Monaco",
                "Montenegro",
                "Netherlands",
                "Norway",
                "Poland",
                "Portugal",
                "Romania",
                "Russia",
                "San Marino",
                "Serbia",
                "Slovakia",
                "Slovenia",
                "Spain",
                "Sweden",
                "Switzerland",
                "Turkey",
                "Ukraine",
                "United Kingdom",
                "Vatican City"
          })
          .Separator(", ")
          .HtmlAttributes(new { style = "width: 100%;" })
        )

        <div class="demo-hint">Start typing the name of an European country</div>
    </div>
</div>

<script>
    $(document).ready(function () {

        var autocomplete = $("#countries").data('kendoAutoComplete');

        var size = $("#size").kendoDropDownList({
            dataTextField: "text",
            dataValueField: "value",
            value: "medium",
            change: onChange,
            dataSource: [
                { text: "Small", value: "small" },
                { text: "Medium", value: "medium" },
                { text: "Large", value: "large" },
                { text: "None", value: "none" }
            ]
        }).data("kendoDropDownList");

        var rounded = $("#rounded").kendoDropDownList({
            dataTextField: "text",
            dataValueField: "value",
            change: onChange,
            value: "medium",
            dataSource: [
                { text: "Small", value: "small" },
                { text: "Medium", value: "medium" },
                { text: "Large", value: "large" },
                { text: "Full", value: "full" },
                { text: "None", value: "none" },
            ]
        }).data("kendoDropDownList");

        var fill = $("#fillMode").kendoDropDownList({
            dataTextField: "text",
            dataValueField: "value",
            change: onChange,
            value: "solid",
            dataSource: [
                { text: "Solid", value: "solid" },
                { text: "Flat", value: "flat" },
                { text: "Outline", value: "outline" },
                { text: "None", value: "none" }
            ]
        }).data("kendoDropDownList");

        function onChange(e) {

            var sizeValue = size.value();
            var roundedValue = rounded.value();
            var fillValue = fill.value();
            var selectedValues = autocomplete.value();
            autocomplete.value([]);
            autocomplete.setOptions({
                size: sizeValue,
                rounded: roundedValue,
                fillMode: fillValue
            })
            autocomplete.value(selectedValues);
        }
    });
</script>

<style>
    .k-picker.k-dropdownlist {
        width: 140px;
    }
</style>