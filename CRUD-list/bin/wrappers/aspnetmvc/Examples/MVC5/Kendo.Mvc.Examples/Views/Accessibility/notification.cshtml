
            <span id="notification"></span>
            <button id="showPopupNotification" class="k-button k-button-solid-base k-button-solid k-button-md k-rounded-md">Show notification</button><br />
            <script type="module">
            $("#notification").kendoNotification({
                position: {
                    pinned: true,
                    top: 130,
                    left: 50
                },
                hideOnClick: false
            });
            $("#showPopupNotification").click(function(){
                $("#notification").getKendoNotification().show("Kendo Notification");
            });
            </script>
        