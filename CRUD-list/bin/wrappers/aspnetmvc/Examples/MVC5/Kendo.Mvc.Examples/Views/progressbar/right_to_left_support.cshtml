<div class="k-rtl demo-section">
        <h4>ProgressBar</h4>
        @(Html.Kendo().ProgressBar()
              .Name("progressBar")
              .Type(ProgressBarType.Percent)
              .Animation(a => a.Duration(600))
              .Events(e => e.Complete("onComplete"))
        )
        <button id="startProgress" >Start progress</button>
    </div>

    @section scripts {
<script>
        $(document).on("kendoReady", function () {
            $("#startProgress").click(function () {
                if (!$(this).hasClass("k-disabled")) {
                    $(this).addClass("k-disabled");

                    progress();
                }
            });
        });

        function onComplete() {
            $("#startProgress").removeClass("k-disabled").text("Restart Progress");
        }

        function progress() {
            var pb = $("#progressBar").data("kendoProgressBar");
            pb.value(0);

            var interval = setInterval(function () {
                if (pb.value() < 100) {
                    pb.value(pb.value() + 10);
                } else {
                    clearInterval(interval);
                }
            }, 100);
        }
    </script>
}

    <style>
        #progressBar {
            width: 100%;
            margin-bottom: 10px;
        }
        .demo-section {
            text-align: right;
        }
    </style>
