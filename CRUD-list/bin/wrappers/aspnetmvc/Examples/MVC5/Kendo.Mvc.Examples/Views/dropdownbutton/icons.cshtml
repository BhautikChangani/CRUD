<div class="demo-section k-d-flex k-justify-content-evenly" style="padding-top: 54px;">
        <div>
            <h3>IconCss:</h3>
            @(Html.Kendo().DropDownButton()
                .Name("iconCssButton")
                .Text("User Settings")
                .Icon("user")
                .Items(items=>{
                    items.Add().Id("profile").Text("My Profile").Icon("image");
                    items.Add().Id("friend-request").Text("Friend Requests").Icon("inbox");
                    items.Add().Id("settings").Text("Account Settings").Icon("gear");
                    items.Add().Id("support").Text("Support").Icon("question-circle");
                    items.Add().Id("logout").Text("Log Out").Icon("logout");
                })
            )
        </div>

        <div>
            <h3>SpriteCssClass:</h3>
           @(Html.Kendo().DropDownButton()
                .Name("spriteButton")
                .Text("Play")
                .SpriteCssClass("k-icon videoIcon")
                .Items(items=>{
                    items.Add().Id("stop").Text("Stop").Icon("stop");
                    items.Add().Id("pause").Text("Pause").Icon("inbox");
                    items.Add().Id("resume").Text("Resume").Icon("play");
                })
            )
        </div>
</div>
<style>
    .videoIcon {
        background-image: url(@Url.Content("~/content/shared/icons/16/video.png"));
    }
</style>

