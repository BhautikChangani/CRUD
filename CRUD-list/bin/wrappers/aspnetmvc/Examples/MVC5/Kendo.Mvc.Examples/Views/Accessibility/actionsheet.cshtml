
        <div id="example">
            <div id="actionsheet"></div>
        </div>
        <script type="module">
            var actionsheet = $('#actionsheet').kendoActionSheet({
                title: 'Select item',
                items: [
                    {
                        text: 'Edit Item',
                        icon: 'pencil',
                        click: onClick
                    },
                    {
                        text: 'Add to Favorites',
                        icon: 'heart',
                        click: onClick
                    },
                    {
                        text: 'Upload New',
                        icon: 'upload',
                        click: onClick
                    },
                    {
                        text: 'Cancel',
                        icon: 'cancel',
                        group: 'bottom',
                        click: onClick
                    },
                ]
            }).data('kendoActionSheet');

            function onClick(e) {
                e.preventDefault();
                actionsheet.close();
            }

            actionsheet.open();
        </script>
    