<div class="demo-section k-text-center">
    @(Html.Kendo().Button()
        .Name("toggle")
        .Content(@<text>
            @(Html.Kendo().Loader()
                    .Name("loader")
                    .Visible(false)
            )
            Show Loader
        </text>)
        .Events(ev => ev.Click("onClick"))
    )
</div>

@section scripts {
    <script>
        function onClick() {
            var loader = $("#loader").data("kendoLoader");
            loader.show();
            setTimeout(function () {
                loader.hide();
            }, 3000);
        }
    </script>
}

<style>
    .k-button > .k-loader {
        margin-right: 8px;
    }
</style>