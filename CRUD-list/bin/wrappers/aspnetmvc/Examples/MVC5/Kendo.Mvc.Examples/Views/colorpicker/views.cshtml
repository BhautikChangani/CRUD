<div class="hidden-on-narrow wide">
    <div id="bike">
        <div id="bike-tail"></div><div id="bike-head"></div>
    </div>
    <div class="picker-wrapper">
        <label for="tail">Tail color</label>
        @(Html.Kendo().ColorPicker()
            .Name("tail")
            .Preview(false)
            .Value("#000")
            .Events(ev=>ev.Change("select"))
            .View(ColorPickerView.Palette)
            .Views(new string[] { "gradient", "palette" })
        )
    </div>
    <div class="picker-wrapper">
        <label for="head">Front &amp; side color</label>
        @(Html.Kendo().ColorPicker()
            .Name("head")
            .Preview(false)
            .Value("#e15613")
            .Events(ev=>ev.Change("select"))
            .View(ColorPickerView.Gradient)
            .Views(new string[] { "gradient", "palette" })
        )
    </div>
</div>
@section scripts{
<script>
    function select(e) {
        $("#bike-" + this.element.attr("id")).css("background-color", e.value);
    }
</script>
}

<style>
    .wide {
        text-align: center;
        padding-top: 54px;
        padding-bottom: 30px;
    }

    #bike {
        margin: 0 0 10px;
        background: url(../content/web/colorpicker/background.png);
    }

    #bike-head, #bike-tail {
        background: url(../content/web/colorpicker/motor.png);
        display: inline-block;
        height: 299px;
        width: 241px;
    }

    #bike-tail {
        background-color: #000;
    }

    #bike-head {
        background-color: #e15613;
        background-position: -241px 0;
    }

    .picker-wrapper {
        display: inline-block;
        text-align: center;
        margin: 0 18px;
    }

        .picker-wrapper label {
            display: block;
        }
</style>