<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    <div class="k-w-300">
        <ul id="fieldlist">
            <li>
                <label for="categories">Catergories:</label>
                @(Html.Kendo().MultiColumnComboBox()
                  .Name("categories")
                  .HtmlAttributes(new { style = "width:100%;" })
                  .Placeholder("Select category...")
                  .DataTextField("CategoryName")
                  .DataValueField("CategoryId")
                  .Columns(columns =>
                  {
                      columns.Add().Field("CategoryName").Title("Name");
                      columns.Add().Field("CategoryId").Title("ID");
                  })
                  .Filter(FilterType.Contains)
                  .DataSource(source =>
                  {
                      source.Read(read =>
                      {
                          read.Action("Cascading_Get_Categories", "MultiColumnComboBox");
                      });
                  })
                )
            </li>
            <li>
                <label for="products">Products:</label>
                @(Html.Kendo().MultiColumnComboBox()
                  .Name("products")
                  .HtmlAttributes(new { style = "width:100%;" })
                  .Placeholder("Select product...")
                  .DataTextField("ProductName")
                  .DataValueField("ProductID")
                  .Columns(columns =>
                  {
                      columns.Add().Field("ProductName").Title("Name");
                      columns.Add().Field("ProductID").Title("ID");
                  })
                  .Filter(FilterType.Contains)
                  .DataSource(source => {
                      source.Read(read =>
                      {
                          read.Action("Cascading_Get_Products", "MultiColumnComboBox")
                              .Data("filterProducts");
                      })
                      .ServerFiltering(true);
                  })
                  .Enable(false)
                  .AutoBind(false)
                  .CascadeFrom("categories")
                )
            </li>
            <li>
                <label for="orders">Orders:</label>
                @(Html.Kendo().MultiColumnComboBox()
                  .Name("orders")
                  .HtmlAttributes(new { style = "width:100%;" })
                  .Placeholder("Select order...")
                  .DataTextField("ShipCity")
                  .DataValueField("OrderID")
                  .Columns(columns =>
                  {
                      columns.Add().Field("ShipCity").Title("City");
                      columns.Add().Field("OrderID").Title("ID");
                  })
                  .Filter(FilterType.Contains)
                  .DataSource(source => {
                      source.Read(read =>
                      {
                          read.Action("Cascading_Get_Orders", "MultiColumnComboBox")
                              .Data("filterOrders");
                      })
                      .ServerFiltering(true);
                  })
                  .Enable(false)
                  .AutoBind(false)
                  .CascadeFrom("products")
                )
            </li>
            <li>
                <button class="k-button k-button-solid-primary k-button-solid k-button-md k-rounded-md" id="get">View Order</button>
            </li>
        </ul>
    </div>
</div>
    @section scripts {
        <script>
            function filterOrders() {
                return {
                    products: $("#products").val(),
                    orderFilter: $("#orders").data("kendoMultiColumnComboBox").input.val()
                };
            }

            function filterProducts() {
                return {
                    categories: $("#categories").val(),
                    productFilter: $("#products").data("kendoMultiColumnComboBox").input.val()
                };
            }

            $(document).on("kendoReady", function () {
                var categories = $("#categories").data("kendoMultiColumnComboBox"),
                    products = $("#products").data("kendoMultiColumnComboBox"),
                    orders = $("#orders").data("kendoMultiColumnComboBox");

                $("#get").click(function () {
                    var categoryInfo = "\nCategory: { id: " + categories.value() + ", name: " + categories.text() + " }",
                        productInfo = "\nProduct: { id: " + products.value() + ", name: " + products.text() + " }",
                        orderInfo = "\nOrder: { id: " + orders.value() + ", name: " + orders.text() + " }";

                    alert("Order details:\n" + categoryInfo + productInfo + orderInfo);
                });
            });
        </script>
    }
    <style>
        #fieldlist {
            margin: 0;
            padding: 0;
        }

            #fieldlist li {
                list-style: none;
                padding-bottom: 1.5em;
                text-align: left;
            }
    </style>
