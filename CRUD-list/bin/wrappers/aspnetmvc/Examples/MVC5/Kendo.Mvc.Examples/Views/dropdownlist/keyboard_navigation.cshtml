<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    <div class="k-w-300">
        <label for="size">T-shirt Size</label>
        @(Html.Kendo().DropDownList()
          .Name("size")
          .BindTo(new List<string>() {
              "X-Small",
              "Small",
              "Medium",
              "Large",
              "X-Large",
              "2X-Large"
          })
         .HtmlAttributes(new { style = "width: 100%", accesskey = "w" })
        )
    </div>
</div>
