<div class="demo-section wide">
    @(
        Html.Kendo().Chart<Kendo.Mvc.Examples.Models.ElectricityProduction>()
        .Name("chart")
        .Series(
            srs=>srs.Pyramid("Wind","Year")
                .DynamicHeight(false)
                .SegmentSpacing(2)
                .Labels(lbl=>lbl.Visible(true).Template("#= dataItem.Year #").Background("none"))

        )
        .DataSource(ds =>
            {
                ds.Read(read => read.Action("SpainElectricityProduction", "Pyramid_Charts"))
                    .Sort(sort => sort.Add(model => model.Year).Descending())
                    .ServerOperation(false);
            }
        )
        .Legend(false)
        .Title("Spain windpower electricity production (GWh)")
        .Tooltip(tt=>tt.Visible(true).Template("#= category # - #= value # GWh"))
    )
</div>

