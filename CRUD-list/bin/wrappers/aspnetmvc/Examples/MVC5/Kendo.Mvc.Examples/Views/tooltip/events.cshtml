<div class="demo-section">
    <span id="autohide-true" class="k-button wider">Hover me!</span> <span id="autohide-false"
        class="k-button wider">Hover me too!</span>
</div>

@(Html.Kendo().Tooltip()
        .For("#autohide-true")        
        .Position(TooltipPosition.Top)
        .Content("Hello!")
        .Width(120)
        .Events(events => events.Hide("onHide").Show("onShow"))
    )
    
@(Html.Kendo().Tooltip()
    .For("#autohide-false")    
    .AutoHide(false)
    .Position(TooltipPosition.Top)
    .Content("Hello!")
    .Width(120)
    .Events(events => events.Hide("onHide").Show("onShow"))
)
@section scripts {
<script type="text/javascript">
    function onShow(e) {
        kendoConsole.log("event :: show");
    }

    function onHide(e) {
        kendoConsole.log("event :: hide");
    }
</script>
}
<style>
    .demo-section {
        text-align: center;
    }
    .wider {
        display: block;
        margin: 20px 0;
        padding: 15px 8px;
        line-height: 23px;
        width: 100%;
    }
</style>
