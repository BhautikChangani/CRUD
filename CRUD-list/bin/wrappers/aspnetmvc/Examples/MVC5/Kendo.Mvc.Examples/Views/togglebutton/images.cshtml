<div class="demo-section">
    @(Html.Kendo().ToggleButton()
        .Name("spriteIconButton")
        .Group("icons")
        .SpriteCssClass("k-icon netherlandsFlag")
        .Content("Sprite icon"))
    @(Html.Kendo().ToggleButton()
        .Name("svgIconButton")
        .Group("icons")
        .Icon("filter")
        .Content("Kendo UI SVG Icon"))
    @(Html.Kendo().ToggleButton()
        .Name("imageButton")
        .Group("icons")
        .ImageUrl(Url.Content("~/Content/shared/icons/sports/snowboarding.png"))
        .Content("Image icon"))
</div>

<style>
    .demo-section {
        line-height: 4em;
    }
    .demo-section .k-button {
        margin-right: 10px;
    }
    .k-button .k-image {
        height: 16px;
    }
    .netherlandsFlag {
        background-image: url('@Url.Content("~/Content/shared/styles/flags.png")');
        background-position: 0 -64px;
    }
</style>
