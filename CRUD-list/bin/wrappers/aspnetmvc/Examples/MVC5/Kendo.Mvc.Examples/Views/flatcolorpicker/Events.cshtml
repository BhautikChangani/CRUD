<script>
        function change(e) {
             kendoConsole.log("Change in picker #" + this.element.attr("id") + " :: " + e.value);
        }
</script>

<div class="k-d-flex k-justify-content-center" id="flatcolor-container">
    <div class="k-w-300">
        <label for="flatColorPicker">FlatColorPicker</label>
        @(Html.Kendo().FlatColorPicker()
               .Name("flatColorPicker")
               .Value("#00f")
               .Events(ev => ev.Change("change"))
         )
    </div>
</div>
<style>
    #flatcolor-container {
        padding-top: 54px;
        padding-bottom: 30px;
    }

    .k-w-300 {
        text-align: center;
    }
</style>


