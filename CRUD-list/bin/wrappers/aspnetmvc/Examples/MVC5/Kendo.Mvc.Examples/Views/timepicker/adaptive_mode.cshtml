<div class='note' style="text-align: center;">
    <p>
        Resize the browser to see how the TimePicker popup adapts to different resolutions.
    </p>
</div>

<div class="k-d-flex k-justify-content-center" style="padding-top: 54px;">
    <div class="k-w-300">
        <label for="timepicker">Select time:</label>
        @(Html.Kendo().TimePicker()
            .Name("timepicker")
            .AdaptiveMode(AdaptiveMode.Auto)
            .HtmlAttributes(new { style = "width: 100%", title = "timepicker" })
            )
    </div>
</div>

<style>
    .note {
        font: normal 18px "Metric";
        border-radius: 2px;
        margin: 20px auto 40px auto;
        padding: 20px;
        border-left: 4px solid;
        border-left-color: #5392e4;
        background: rgba(83,146,228,0.1);
        text-align: center;
    }
</style>