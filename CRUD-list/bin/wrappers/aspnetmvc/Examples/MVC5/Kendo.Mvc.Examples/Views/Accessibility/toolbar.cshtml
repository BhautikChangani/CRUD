
            <div id="example">
                <div class="demo-section k-content wide">
                    <div id="toolbar"></div>
                </div>

                <script type="module">
                    $(document).ready(function() {
                        $("#toolbar").kendoToolBar({
                            items: [
                                { type: "button", text: "Button" },
                                { type: "button", text: "Toggle Button", togglable: true },
                                {
                                    type: "splitButton",
                                    text: "Insert",
                                    menuButtons: [
                                        { text: "Insert above", icon: "insert-top" },
                                        { text: "Insert between", icon: "insert-middle" },
                                        { text: "Insert below", icon: "insert-bottom" }
                                    ]
                                },
                                { type: "separator" },
                                {
                                    type: "buttonGroup",
                                    buttons: [
                                        { icon: "align-left", text: "Left", togglable: true, group: "text-align" },
                                        { icon: "align-center", text: "Center", togglable: true, group: "text-align" },
                                        { icon: "align-right", text: "Right", togglable: true, group: "text-align" }
                                    ]
                                },
                                {
                                    type: "buttonGroup",
                                    buttons: [
                                        { icon: "bold", text: "Bold", togglable: true, showText: "overflow" },
                                        { icon: "italic", text: "Italic", togglable: true, showText: "overflow" },
                                        { icon: "underline", text: "Underline", togglable: true, showText: "overflow" }
                                    ]
                                },
                                {
                                    type: "button",
                                    text: "Action",
                                    overflow: "always"
                                },
                                {
                                    type: "button",
                                    text: "Another Action",
                                    overflow: "always"
                                },
                                {
                                    type: "button",
                                    text: "Something else here",
                                    overflow: "always"
                                }
                            ]
                        });

                        //focus the widget
                        $(document).on("keydown", function(e) {
                            if (e.altKey && e.keyCode === 87 /* w */) {
                                $("#toolbar").data("kendoToolBar").wrapper.focus();
                            }
                        });
                    });
                </script>
            </div>
        